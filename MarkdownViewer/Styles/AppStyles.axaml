<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== GLOBAL OVERRIDES ==================== -->

    <Style Selector="Window">
        <Setter Property="Background" Value="{DynamicResource AppBackground}" />
    </Style>

    <!-- ==================== HEADER BAR ==================== -->

    <Style Selector="Border.header-bar">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundSecondary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Height" Value="48" />
    </Style>

    <Style Selector="Button.header-btn">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.header-btn:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
    </Style>

    <Style Selector="Button.header-btn:pressed">
        <Setter Property="Background" Value="{DynamicResource AppBorderSubtle}" />
    </Style>

    <Style Selector="Button.font-btn-small">
        <Setter Property="Padding" Value="8,8" />
        <Setter Property="MinWidth" Value="36" />
    </Style>

    <Style Selector="Button.font-btn-large">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinWidth" Value="36" />
    </Style>

    <Style Selector="ToggleButton.header-btn">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="ToggleButton.header-btn:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
    </Style>

    <Style Selector="ToggleButton.header-btn:checked">
        <Setter Property="Background" Value="{DynamicResource AppAccent}" />
    </Style>

    <Style Selector="RadioButton.header-tab">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="RadioButton.header-tab:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
    </Style>

    <Style Selector="RadioButton.header-tab:checked">
        <Setter Property="Background" Value="{DynamicResource AppSurface}" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- ==================== SIDE PANEL ==================== -->

    <Style Selector="Border.panel-header">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundTertiary}" />
        <Setter Property="Padding" Value="8,8" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

    <Style Selector="Button.panel-item">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

    <Style Selector="Button.panel-item:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
    </Style>

    <Style Selector="Button.panel-item:pressed">
        <Setter Property="Background" Value="{DynamicResource AppBorderSubtle}" />
    </Style>

    <Style Selector="Button.panel-subitem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style Selector="Button.panel-subitem:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
    </Style>

    <Style Selector="Border.panel-separator">
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="{DynamicResource AppBorder}" />
        <Setter Property="Margin" Value="16,8" />
    </Style>

    <Style Selector="Expander.panel-expander">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundTertiary}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

    <Style Selector="Expander.panel-expander /template/ ToggleButton">
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>

    <Style Selector="Expander.panel-expander /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Padding" Value="16,8,16,16" />
    </Style>

    <!-- ==================== THEME CARDS ==================== -->

    <Style Selector="Button.theme-card">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="Button.theme-card:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
    </Style>

    <Style Selector="Button.theme-card.selected">
        <Setter Property="BorderBrush" Value="{DynamicResource AppAccent}" />
    </Style>

    <Style Selector="Border.theme-preview">
        <Setter Property="Width" Value="56" />
        <Setter Property="Height" Value="56" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
    </Style>

    <Style Selector="Border.theme-preview-light">
        <Setter Property="Background" Value="#ffffff" />
    </Style>

    <Style Selector="Border.theme-preview-dark">
        <Setter Property="Background" Value="#1e1e1e" />
    </Style>

    <Style Selector="Border.theme-preview-vscode">
        <Setter Property="Background" Value="#1e1e1e" />
    </Style>

    <Style Selector="Border.theme-preview-github">
        <Setter Property="Background" Value="#0d1117" />
    </Style>

    <!-- ==================== PAGE NAVIGATION BAR ==================== -->

    <Style Selector="Border.page-nav-bar">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundSecondary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <!-- ==================== TOOLBAR BUTTON ==================== -->

    <Style Selector="Button.toolbar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
    </Style>

    <Style Selector="Button.toolbar:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
    </Style>

    <Style Selector="Button.toolbar:pressed">
        <Setter Property="Background" Value="{DynamicResource AppBorderSubtle}" />
    </Style>

    <Style Selector="ToggleButton.toolbar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
    </Style>

    <Style Selector="ToggleButton.toolbar:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
    </Style>

    <Style Selector="ToggleButton.toolbar:checked">
        <Setter Property="Background" Value="{DynamicResource AppBorderSubtle}" />
        <Setter Property="Foreground" Value="{DynamicResource AppAccent}" />
    </Style>

    <!-- ==================== TAB BUTTONS ==================== -->

    <Style Selector="RadioButton.tab">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="BorderThickness" Value="0,0,0,2" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      HorizontalAlignment="Center"
                                      TextBlock.FontWeight="{TemplateBinding FontWeight}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="RadioButton.tab:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
        <Setter Property="Background" Value="{DynamicResource AppSurfaceHover}" />
    </Style>

    <Style Selector="RadioButton.tab:checked">
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppAccent}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- ==================== SEPARATOR ==================== -->

    <Style Selector="Border.separator-v">
        <Setter Property="Width" Value="1" />
        <Setter Property="Background" Value="{DynamicResource AppBorder}" />
        <Setter Property="Margin" Value="8,6" />
    </Style>

    <Style Selector="Border.separator-h">
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="{DynamicResource AppBorder}" />
    </Style>

    <!-- ==================== PANELS ==================== -->

    <Style Selector="Border.toolbar-panel">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundSecondary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <Style Selector="Border.status-panel">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundSecondary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <Style Selector="Border.nav-panel">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundSecondary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
    </Style>

    <Style Selector="Border.tab-strip">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundTertiary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="12,0" />
    </Style>

    <!-- ==================== DROP OVERLAY ==================== -->

    <Style Selector="Border.drop-overlay">
        <Setter Property="Background" Value="#80000000" />
    </Style>

    <Style Selector="Border.drop-card">
        <Setter Property="Background" Value="{DynamicResource AppSurface}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppAccent}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="40" />
    </Style>

    <!-- ==================== WELCOME PANEL ==================== -->

    <Style Selector="TextBlock.welcome-title">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontFamily" Value="Segoe UI Light, San Francisco, Ubuntu Light" />
        <Setter Property="Foreground" Value="{DynamicResource AppText}" />
    </Style>

    <Style Selector="TextBlock.welcome-subtitle">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
    </Style>

    <Style Selector="Button.welcome-btn">
        <Setter Property="Padding" Value="20,10" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="Button.welcome-btn-primary">
        <Setter Property="Background" Value="{DynamicResource AppAccent}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="20,10" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="Button.welcome-btn-primary:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppAccentHover}" />
    </Style>

    <Style Selector="Button.link-btn">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource AppLink}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="Button.link-btn:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource AppAccentHover}" />
    </Style>

    <!-- ==================== STATUS BAR ==================== -->

    <Style Selector="TextBlock.status-text">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
    </Style>

    <!-- ==================== METADATA PANEL ==================== -->

    <Style Selector="Border.metadata-panel">
        <Setter Property="Background" Value="{DynamicResource AppBackgroundTertiary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppBorder}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="16,8" />
    </Style>

    <Style Selector="Border.category-tag">
        <Setter Property="Background" Value="{DynamicResource AppAccent}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="Margin" Value="0,0,6,0" />
    </Style>

    <Style Selector="TextBlock.category-text">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="TextBlock.metadata-date">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextSecondary}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.metadata-label">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{DynamicResource AppTextMuted}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,6,0" />
    </Style>

</Styles>
